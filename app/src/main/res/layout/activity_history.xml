<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/bet_history_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/bet_history_header_text"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/no_history_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bet_history_header"
        android:text="@string/empty_feed_message"
        android:textSize="18sp"/>

    <!-- Bet balance label -->
    <TextView
        android:id="@+id/history_bet_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:minHeight="24dp"/>

    <com.bowazik.bob.ibet.views.ExpandedListView
        android:id="@+id/list_bet_history"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@id/history_bet_balance"
        android:layout_below="@id/bet_history_header"
        android:descendantFocusability="blocksDescendants"
        android:divider="#C0C0C0"
        android:dividerHeight="1dp"
        android:layout_marginBottom="@dimen/bet_list_history_bot_top"
        android:layout_marginTop="@dimen/bet_list_history_bot_top"/>

</RelativeLayout>
