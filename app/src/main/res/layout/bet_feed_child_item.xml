<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Title Input -->
    <TextView
        android:id="@+id/bet_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bet_feed_item_title_font_size"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingStart="?android:attr/expandableListPreferredChildPaddingLeft"/>

    <!-- Description Input -->
    <TextView
        android:id="@+id/bet_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Contender Label -->
        <TextView
            android:id="@+id/bet_item_contender_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bet_item_desc_margin_side"
            android:layout_marginEnd="@dimen/bet_item_desc_margin_side"
            android:text="@string/bet_item_contender_desc"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>

        <!-- Contender Input -->
        <TextView
            android:id="@+id/bet_item_contender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bet_item_contender_desc"
            android:layout_toEndOf="@id/bet_item_contender_desc"
            android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Stake Label -->
        <TextView
            android:id="@+id/bet_item_stake_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bet_item_desc_margin_side"
            android:layout_marginEnd="@dimen/bet_item_desc_margin_side"
            android:text="@string/bet_item_stake_desc"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>

        <!-- Stake Input -->
        <TextView
            android:id="@+id/bet_item_stake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bet_item_stake_desc"
            android:layout_toEndOf="@id/bet_item_stake_desc"
            android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>
    </RelativeLayout>

</LinearLayout>