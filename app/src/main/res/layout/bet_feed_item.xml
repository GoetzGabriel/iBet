<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/bet_item_layout_margin">

    <TextView
        android:id="@+id/bet_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/bet_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bet_item_title"/>

    <TextView
        android:id="@+id/bet_item_contender_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/bet_item_desc_margin_side"
        android:layout_marginEnd="@dimen/bet_item_desc_margin_side"
        android:text="@string/bet_item_contender_desc"
        android:layout_below="@id/bet_item_description"
        android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>

    <TextView
        android:id="@+id/bet_item_contender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bet_item_contender_desc"
        android:layout_toEndOf="@id/bet_item_contender_desc"
        android:layout_below="@id/bet_item_description"
        android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>

    <TextView
        android:id="@+id/bet_item_stake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/bet_item_description"
        android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>

    <TextView
        android:id="@+id/bet_item_stake_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/bet_item_desc_margin_side"
        android:layout_marginEnd="@dimen/bet_item_desc_margin_side"
        android:text="@string/bet_item_stake_desc"
        android:layout_toLeftOf="@id/bet_item_stake"
        android:layout_toStartOf="@id/bet_item_stake"
        android:layout_below="@id/bet_item_description"
        android:layout_marginBottom="@dimen/bet_item_layout_margin_bot"/>

</RelativeLayout>